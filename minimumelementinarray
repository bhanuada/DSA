package dsa1;

public class Smallestelementinarray {
public static int smallestelearray(int[] arr) {
	
	int min=arr[0];
	for(int i=0;i<arr.length;i++) {
		
		if(arr[i]<min) {
			min=arr[i];
		}
	}
	return min;
	
}
	public static void main(String[] args) {
		int arr[] = {4,2,1,3,5,6,7,0};
		int min =smallestelearray(arr);
		System.out.println(min);

	}

}
