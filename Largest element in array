package dsa1;

public class Largestelementinarray {

	public static int largest(int[] arr) {
		int max = arr[0];
		for (int i = 0; i < arr.length; i++) {

			if (arr[i] > max) {
				max = arr[i];

			}
		}
		return max;

	}

	public static void main(String[] args) {

		int arr[] = { 1, 2, 4, 5, 6, 7, 8 };
		int largest = largest(arr);
		System.out.println(largest);
	}

}
